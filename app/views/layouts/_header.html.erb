<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
	<a class="navbar-brand" href="/"><%= glyph 'home' %> Strona główna</a>
  <% if user_signed_in? %>
	  <a class="navbar-brand" href="/lekis">Baza leków</a>
  <% end %>
    <nav>
      <div id="navbar" class="navbar-text navbar-right">
        <% if !user_signed_in? %>
			    <%= glyph 'log-in' %> <%= link_to "Zaloguj się", new_user_session_path, :class => 'navbar-link'  %>
        <% else %>
          <%= glyph 'user' %> <%= link_to 'Edytuj profil', edit_user_registration_path, :class => 'navbar-link' %> |
          <%= glyph 'pencil' %> <%= link_to 'Dodaj lek', new_leki_path, :class => 'navbar-link' %> |
          <%= glyph 'log-out' %> <%= link_to "Wyloguj się", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <% end %>
      </div>
    </nav>
  </div>
</header>
