<div class="container">
	<div class="row centered-form">
		<div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Nowe hasło</h3>
				</div>
				<div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
          :defaults => { :input_html => { :class => "form-control" } }, html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <%= f.input :email, required: true, autofocus: true, placeholder: "Email" %>

          <%= f.button :submit, "Resetuj hasło", :class => "btn btn-lg btn-primary btn-block" %>
          <% end %>
				</div>
			</div>
		</div>
	</div>
</div>
