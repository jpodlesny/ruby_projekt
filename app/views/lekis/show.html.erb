<%- model_class = Leki -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nazwa) %></dt>
      <dd><pre class="prettyprint"><%= @leki.nazwa %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cena) %></dt>
      <dd><pre class="prettyprint"><%= @leki.cena %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              lekis_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_leki_path(@leki), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              leki_path(@leki),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Na pewno chcesz usunąć?')) },
              class: 'btn btn-danger' %>
</div>